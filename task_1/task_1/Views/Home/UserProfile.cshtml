@model task_1.Models.ProfileModel.Profile
@{
    ViewBag.Title = Resources.Resource.YourProfile;
}

<h2>@Resources.Resource.YourProfile</h2>

<div class="col-md-6">
    <h3 align ="center">@Resources.Resource.PersonalData</h3>

    @{Html.RenderPartial("FieldsViewer", Model.Fields);}

</div>
<div class="col-md-6">
    <h3 align="center">@Resources.Resource.BusinessCards</h3>

    <form action="/Home/BusinessCardRedactor">
        <div align="center">
            <input id="Submit1" type="submit" value="@Resources.Resource.Add" />
        </div>
    </form>
    <br>
    @{
        var index = 1;
        foreach (var businessCard in Model.BusinessCards)
        {
            <p>
                <a href="@businessCard.Url">@Resources.Resource.BusinessCard №@index @Resources.Resource.Rating: @businessCard.Rating</a>
            </p>
            index++;
        }
    }
</div>