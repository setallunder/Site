@model task_1.Models.ProfileModel.Profile
@{
    ViewBag.Title = "Your profile";
}

<h2>Your profile</h2>

<div class="col-md-6">
    <h3 align ="center">Personal data</h3>

    @{Html.RenderPartial("FieldsViewer", Model.Fields);}

</div>
<div class="col-md-6">
    <h3 align="center">Business cards</h3>

    <form action="/Home/BusinessCardRedactor">
        <div align="center">
            <input id="Submit1" type="submit" value="Add" />
        </div>
    </form>
    <br>
    @{
        var index = 1;
        foreach (var businessCard in Model.BusinessCards)
        {
            <p>
                <a href="@businessCard.Url">Card №@index Rating: @businessCard.Rating</a>
            </p>
            index++;
        }
    }
</div>